<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="707dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/server_name"
                android:layout_width="210dp"
                android:layout_height="61dp"
                android:text="Server Name"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="210dp"
                android:layout_height="61dp"
                android:text="Status"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/server_status"
                android:layout_width="204dp"
                android:layout_height="match_parent"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <TextView

                android:layout_width="210dp"
                android:layout_height="57dp"
                android:text="Start Date"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/server_sdate"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView

                android:layout_width="212dp"
                android:layout_height="match_parent"
                android:text="Starting time"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/server_stime"
                android:layout_width="196dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="212dp"
                android:layout_height="match_parent"
                android:text="End Date"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/server_edate"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <TextView

                android:layout_width="212dp"
                android:layout_height="57dp"
                android:text="Time"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/server_etime"
                android:layout_width="216dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_solved"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Inform Problem" />

        <Button
            android:id="@+id/btn_escalate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escalate" />


    </LinearLayout>

</LinearLayout>